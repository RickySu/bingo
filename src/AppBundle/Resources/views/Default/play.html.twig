{% extends "::base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/base.css') }}"/>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/base.js') }}"></script>
    <script src="{{ asset('js/play.js') }}"></script>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1 col-lg-4 col-lg-offset-4 space">
                <div class="row">
                    <button id="autoselect" class="btn btn-primary btn-lg col-xs-5">電腦選號</button>
                    <button id="resetNumber" class="btn btn-danger btn-lg col-xs-5 col-xs-offset-2">清除</button>
                </div>
            </div>
            <div class="col-xs-10 col-xs-offset-1 col-lg-4 col-lg-offset-4 space" id="numbers">
                {% for row in 0..4 %}
                    {% for col in 0..4 %}
                        <button class="btn" data-row="{{ row }}" data-col="{{ col }}">
                            <div>
                                <table>
                                    <tr>
                                        <td align="center" valign="middle" data-number></td>
                                    </tr>
                                </table>
                            </div>
                        </button>
                    {% endfor %}
                {% endfor %}
            </div>
            <div class="col-xs-offset-1 col-lg-4 col-lg-offset-4 space">
                <div>
                    <button id="start" class="btn btn-success btn-lg col-xs-8 col-xs-offset-2">開始 Bingo</button>
                </div>
            </div>
        </div>
    </div>
    {% if not player %}
        <div id="username-modal" class="modal fade" tabindex="-1" role="dialog">
            <form>
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">確認身份</h4>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="name" class="control-label">請輸入姓名</label>
                                <input type="text" class="form-control" id="name" placeholder="姓名">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button id="send" type="submit" class="btn btn-primary">送出</button>
                        </div>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </form>
        </div><!-- /.modal -->
    {% endif %}
{% endblock %}